{
  "name": "jarvis-desktop",
  "version": "2.0.0",
  "description": "助手·贾维斯 - 桌面端应用 (IPC架构)",
  "private": true,
  "scripts": {
    "postinstall": "cd frontend && npm install",
    "prestart": "npm run kill-ports",
    "start": "concurrently --kill-others --names \"ENGINE,TAURI\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run start:engine\" \"npm run start:tauri\"",
    "kill-ports": "lsof -ti:1420 | xargs kill -9 2>/dev/null || true",
    "prepare-resources": "cd frontend/src-tauri && ./prepare-resources.sh",
    "start:engine": "cd engine && python3 daemon.py",
    "start:engine:old": "cd engine && python3 main.py",
    "start:tauri": "cd frontend && npm run tauri:dev",
    "dev": "npm start",
    "build": "npm run build:engine && npm run build:frontend && npm run build:tauri",
    "build:engine": "cd engine && ./build_daemon.sh",
    "build:engine:windows": "cd engine && build_daemon.bat",
    "build:frontend": "cd frontend && npm run build",
    "build:tauri": "cd frontend && npm run tauri:build",
    "bundle": "npm run build",
    "package": "npm run build",
    "test": "npm run test:engine && npm run test:rust && npm run test:frontend",
    "test:engine": "cd engine && pytest",
    "test:rust": "cd frontend/src-tauri && cargo test",
    "test:frontend": "cd frontend && npm test",
    "test:e2e": "cd engine && pytest tests/test_e2e.py -v",
    "test:stability": "cd engine && pytest tests/test_stability.py -m 'not slow' -v",
    "test:regression": "cd engine && pytest tests/test_regression.py -v",
    "lint": "cd frontend && npm run lint",
    "format": "cd frontend && npm run format",
    "clean": "rm -rf frontend/dist frontend/src-tauri/target engine/dist engine/build logs"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "jarvis",
    "rpa",
    "automation",
    "tauri",
    "desktop",
    "ipc"
  ],
  "author": "Jarvis Team",
  "license": "UNLICENSED"
}