{
  "name": "desktop-recorder-workflow",
  "version": "0.1.0",
  "description": "Cross-platform desktop recorder and workflow automation tool",
  "main": "dist/main/index.js",
  "homepage": "./",
  "author": "Your Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:electron": "electron-dev .",
    "dev:react": "react-scripts start",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "react-scripts build",
    "build:electron": "tsc",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "zustand": "^4.4.0",
    "axios": "^1.5.0",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.292.0",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "react-scripts": "5.0.1",
    "typescript": "^5.2.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "electron-is-dev": "^2.0.0",
    "electron-dev": "^1.0.1",
    "concurrently": "^8.2.0",
    "eslint": "^8.50.0",
    "eslint-config-react-app": "^7.0.1",
    "@types/jest": "^29.5.0"
  },
  "build": {
    "appId": "com.desktoprecorder.app",
    "productName": "Desktop Recorder",
    "files": [
      "dist/**/*",
      "public/**/*",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,*.d.ts}"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    }
  }
}
